<%- include('partials/header'); %>
<main class="ui raised very padded text container segment">
  
  <div class="ui dividing header center aligned">
      <h2 class="ui header">New Recipe Form</h2>
  </div>
  <form method="POST" action="/recipes" class="ui form">
    <div class="field">
      <label>Recipe</label>
      <input type="text" placeholder="Recipe Name">
    </div>
    <div class="field">
      <label>Category</label>  
      <div class="custom-input-divs" id="add-category-div">
        <input class="input-custom" id="add-category-input" type="text" placeholder="Add Category (comma seperated)">
      </div>         
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" placeholder="Image Url">
    </div>
    <div class="field">
      <label>Description of Recipe</label>
      <textarea rows="2" placeholder="write your description here"></textarea>
    </div>
    <div class="field">
      <label>List of Ingredients</label>
      <div class="custom-input-divs" id="add-ingredient-div">
        <input class="input-custom" id="add-ingredient-input" type="text" placeholder="Add Ingredient (comma seperated)">
      </div>
    </div>   
    <div class="field">
      <label>Method ie list of steps (seperated by a number with a full stop) ie 1. etc...</label>
      <textarea rows="4"></textarea>
    </div>
    <div>
      <a href="/index">Go Back</a>
      <button type="submit" class="ui primary button">Submit</button>
    </div>
  </form>
</main>


<%- include('partials/footer-new-recipe'); %>